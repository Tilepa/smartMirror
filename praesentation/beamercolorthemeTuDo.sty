\mode<presentation>

\usepackage{color}

\definecolor{titlecolor}{RGB}{82, 137, 27}

\definecolor{authorcolor}{RGB}{58, 58, 58}
\definecolor{datecolor}{RGB}{58,58,58}

\definecolor{frametitlecolor}{RGB}{82, 137, 27}

\definecolor{itemcolor}{RGB}{0, 0, 0}

\definecolor{descriptioncolor}{RGB}{0, 0, 0}

\definecolor{captioncolor}{RGB}{0, 0, 0}

\definecolor{normaltextcolor}{RGB}{0, 0, 0}

\definecolor{boxtitlecolor}{RGB}{82, 137, 27}
\definecolor{leftgradient}{RGB}{255, 255, 255}
\definecolor{rightgradient}{RGB}{235, 244, 218}

%---------------------------------------------------------------------------
% Settings
\setbeamercolor*{title page header}{fg=titlecolor}
\setbeamerfont*{title page header}{size=\huge}

\setbeamercolor*{author}{fg=authorcolor}
\setbeamerfont*{author}{size=\Large}

\setbeamercolor*{author in head/foot}{fg=authorcolor}

\setbeamercolor*{date}{fg=datecolor}
\setbeamerfont*{date}{size=\scriptsize}

\setbeamercolor*{date in head/foot}{fg=datecolor}

% This sets the colour of the title of the presentation and titles of all the slides in the presentation to black.
\setbeamercolor{frametitle}{fg = titlecolor}
\setbeamerfont{frametitle}{size=\Large}
\setbeamercolor{title}{fg = titlecolor}

% In case you choose to display the Table of Contents, or the Outline slide.
\setbeamercolor{section in toc}{fg = titlecolor}
\setbeamercolor{section in toc shaded}{fg = titlecolor} 

% The colour of all the items, subitems and and subsubitems are set to black.
\setbeamercolor{item}{fg = itemcolor}
\setbeamercolor{subitem}{fg = itemcolor}
\setbeamercolor{subsubitem}{fg = itemcolor}

% This sets the color for each item heading of the description environment.
\setbeamercolor{description item}{fg = descriptioncolor}

% NOTE: Setting the color black for all the items also sets in black for other environemnts like enumerate.

% We also need to fix the colours for captions for figures and tables.
\setbeamercolor{caption}{fg = captioncolor}
\setbeamercolor{caption name}{fg = captioncolor}


% Standard block
\setbeamercolor{block title}{fg = boxtitlecolor, bg = rightgradient}
\setbeamercolor{block body}{bg = rightgradient}

% Alert block
%\setbeamercolor{block title alerted}{bg = AlTitle}
%\setbeamercolor{block body alerted}{bg = AlBody!5!white}

% Example block
%\setbeamercolor{block title example}{bg = ExTitle}
%\setbeamercolor{block body example}{bg = ExBody!5!white}



%%%%%%
% And one final thing, the colour of the text
\setbeamercolor{normal text}{fg = normaltextcolor}

